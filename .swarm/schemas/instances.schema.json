{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "instances.schema.json",
  "title": "Instance Registry Schema",
  "description": "Schema for tracking active Claude Code instances and their workstream assignments",
  "type": "object",
  "properties": {
    "version": {
      "type": "integer",
      "const": 1,
      "description": "Schema version"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last registry update"
    },
    "instances": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/instance"
      },
      "description": "Map of instance ID to instance object"
    }
  },
  "required": ["version", "lastUpdated", "instances"],
  "definitions": {
    "instance": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique instance identifier (session ID)"
        },
        "status": {
          "type": "string",
          "enum": ["active", "idle", "stopped"],
          "description": "Current instance status"
        },
        "startedAt": {
          "type": "string",
          "format": "date-time",
          "description": "When the instance was started"
        },
        "lastHeartbeat": {
          "type": "string",
          "format": "date-time",
          "description": "Last activity timestamp"
        },
        "workstreams": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "IDs of workstreams this instance is working on"
        },
        "currentWorkstream": {
          "type": ["string", "null"],
          "description": "ID of the currently active workstream"
        },
        "worktree": {
          "type": ["string", "null"],
          "description": "Path to the instance's worktree if any"
        },
        "summaryPath": {
          "type": ["string", "null"],
          "description": "Path to the instance's session summary file"
        },
        "notes": {
          "type": ["string", "null"],
          "description": "Additional notes about this instance"
        }
      },
      "required": ["id", "status", "startedAt", "lastHeartbeat"],
      "additionalProperties": false
    }
  }
}
